
body, html {
  margin: 0;
  padding:0;
}

.wrapper {
  height: 100vh;
  overflow-x: hidden;
  overflow-y: auto;
  perspective: 1px;
}

.section {
  position: relative;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48px;
  color: white;

}

.parallax::after {
  content: " ";
  opacity: 0.65;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  transform: translateZ(-1px) scale(2);
  /* background-size: 100%; */
  z-index: -1;
  background-image: url('https://i.imgur.com/9Iz55JI.jpg');
  background-attachment: fixed;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
}

.content {
  height: 200vh;
  display: flex;
  justify-content: center;
  /* background: red; */
  background-image: url('https://i.imgur.com/dlHQflI.jpg');

}
